<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:ignore="HardcodedText">

    <!-- ConstraintLayout (chiếm 2 phần) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        tools:context=".MainActivity">

        <!-- TextView ở trên -->
        <TextView
            android:id="@+id/workingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:textColor="@color/white"
            android:lines="2"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="@id/resultTV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- TextView ở giữa -->
        <TextView
            android:id="@+id/resultTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonOperator"

            android:onClick="clearExpression"
            android:text="CE"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonOperator"
            android:onClick="clear"
            android:text="C"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonOperator"
            app:cornerRadius="0dp"
            android:text="BS"
            android:onClick="backSpace"/>
        <Button
            style="@style/buttonOperator"
            app:cornerRadius="0dp"
            android:onClick="operationAction"
            android:text="/" />

    </LinearLayout>
    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="7" />
        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="8" />
        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="9" />
        <Button
            style="@style/buttonOperator"
            app:cornerRadius="0dp"
            android:onClick="operationAction"
            android:text="x" />

    </LinearLayout>
    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="4" />
        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="5" />
        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="6" />
        <Button
            style="@style/buttonOperator"
            app:cornerRadius="0dp"
            android:onClick="operationAction"
            android:text="-" />

    </LinearLayout>
    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="1" />
        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="2" />
        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="3" />
        <Button
            style="@style/buttonOperator"
            app:cornerRadius="0dp"
            android:onClick="operationAction"
            android:text="+" />

    </LinearLayout>
    <LinearLayout style="@style/buttonRow">
        <Button
            style="@style/buttonOperator"
            app:cornerRadius="0dp"
            android:onClick="reverseSign"
            android:text="+/-" />

        <Button
            style="@style/buttonNumber"
            app:cornerRadius="0dp"
            android:onClick="numberAction"
            android:text="0" />
        <Button
            style="@style/buttonOperator"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            android:onClick="equal"
            app:cornerRadius="0dp"
            android:textSize="40sp"
            android:layout_weight="2"
            android:text= "=" />


    </LinearLayout>
</LinearLayout>
